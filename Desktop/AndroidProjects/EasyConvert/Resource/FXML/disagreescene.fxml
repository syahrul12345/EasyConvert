<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id = "gridPane"
          fx:controller="controller.disagreeController"
          vgap="10">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <Text text = "Are you sure you want to close?"
          GridPane.columnIndex = "0"
          GridPane.rowIndex = "0"
          GridPane.columnSpan="1"
          GridPane.rowSpan="2"/>


    <HBox fx:id = "hBox"
          GridPane.rowIndex="2"
          GridPane.columnIndex="0"
          GridPane.rowSpan = "2"
          alignment="CENTER"
          spacing="5">
        <Button fx:id ="agreeBtn"
                onAction="#agreeButtonClicked"

                text = "Agree" />

        <Button fx:id ="disagreeBtn"
                onAction="#disagreeButtonClicked"

                text = "Disagree" />
    </HBox>

</GridPane>
